<?xml version="1.0"?>
<Container version="2">
  <Name>vs-code-server</Name>
  <Repository>ctdgunner/vs-code-server:latest</Repository>
  <Registry>https://hub.docker.com/r/ctdgunner/vs-code-server</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/ctdgunner/vs-code-server</Support>
  <Project>https://github.com/ctdgunner/vs-code-server</Project>
  <Overview>VS Code Server running in a Docker container with web interface access. Provides a full Visual Studio Code development environment accessible through your browser.</Overview>
  <Category>Tools:Development</Category>
  <WebUI>http://[IP]:[PORT:8000]/</WebUI>
  <TemplateURL/>
  <Icon>https://raw.githubusercontent.com/linuxserver/docker-templates/master/linuxserver.io/img/code-server-logo.png</Icon>
  <ExtraParams>--hostname=vscode</ExtraParams>
  <PostArgs/>
  <CPUset/>
  <DateInstalled/>
  <DonateText/>
  <DonateLink/>
  <Requires/>
  <Config Name="Web Interface Port" Target="8000" Default="8000" Mode="tcp" Description="Port for VS Code Server web interface" Type="Port" Display="always" Required="true" Mask="false">8000</Config>
  <Config Name="SSH Port" Target="22" Default="2222" Mode="tcp" Description="SSH access port (mapped to avoid conflicts with host SSH)" Type="Port" Display="always" Required="false" Mask="false">2222</Config>
  <Config Name="Workspace" Target="/root/workspace" Default="/mnt/user/development/" Mode="rw" Description="Directory for development workspace" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/development/</Config>
  <Config Name="Server Data" Target="/root/.vscode/server-data" Default="/mnt/user/appdata/vscode-server/server-data" Mode="rw" Description="VS Code server data directory" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/vscode-server/server-data</Config>
  <Config Name="User Data" Target="/root/.vscode/user-data" Default="/mnt/user/appdata/vscode-server/user-data" Mode="rw" Description="VS Code user data directory" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/vscode-server/user-data</Config>
  <Config Name="CLI Data" Target="/root/.vscode/cli-data" Default="/mnt/user/appdata/vscode-server/cli-data" Mode="rw" Description="VS Code CLI data directory" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/vscode-server/cli-data</Config>
  <Config Name="Extensions" Target="/root/.vscode/extensions" Default="/mnt/user/appdata/vscode-server/extensions" Mode="rw" Description="VS Code extensions directory" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/vscode-server/extensions</Config>
  <Config Name="Shell" Target="SHELL" Default="/bin/bash" Mode="" Description="Default shell environment" Type="Variable" Display="always" Required="false" Mask="false">/bin/bash</Config>
  <Config Name="Timezone" Target="TZ" Default="UTC" Mode="" Description="Container timezone" Type="Variable" Display="always" Required="false" Mask="false">UTC</Config>
  <Config Name="Git User Name" Target="GIT_USER_NAME" Default="" Mode="" Description="Git user name (optional)" Type="Variable" Display="always" Required="false" Mask="false"></Config>
  <Config Name="Git User Email" Target="GIT_USER_EMAIL" Default="" Mode="" Description="Git user email (optional)" Type="Variable" Display="always" Required="false" Mask="false"></Config>
</Container>